{
  "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "importHelpers": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "lib": ["es2020", "DOM"],
      "types": ["svelte", "@sveltejs/kit"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", ".svelte-kit/*", "static/*"]
}
